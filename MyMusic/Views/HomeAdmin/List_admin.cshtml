
@{
    ViewBag.Title = "List_admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="right_col" role="main">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        <s:message code="listadmin.info" />
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table class="table table-striped table-bordered">
                        <tbody>
                            <tr>
                                <th><s:message code="listadmin.username" /></th>
                                <td><c:out value="${admin.userName}" /></td>
                                <td align="center">
                                    <button type="button"
                                            class="btn btn-info">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <th><s:message code="listadmin.fullname" /></th>
                                <td><c:out value="${admin.fullName}" /></td>
                                <td align="center">
                                    <button type="button"
                                            class="btn btn-info">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <th><s:message code="listadmin.email" /></th>
                                <td><c:out value="${admin.email}" /></td>
                                <td align="center">
                                    <button type="button"
                                            class="btn btn-info">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <th><s:message code="listadmin.password" /></th>
                                <th><s:message code="listadmin.hidePassword" /></th>
                                <td align="center">
                                    <button type="button"
                                            class="btn btn-info">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <th><s:message code="listadmin.role" /></th>
                                <td><c:out value="${admin.getRole(listGroupRole)}" /></td>
                                <td></td>
                            </tr>
                            <tr>
                                <th><s:message code="listadmin.dayjoined" /></th>
                                <td>
                                    <c:set var="dateJoin" value="${admin.getDateRegister()}" />
                                    <fmt:formatDate type="both" dateStyle="medium"
                                                    timeStyle="medium" value="${dateJoin}" />
                                </td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        <s:message code="listadmin.title" />
                    </h2>
                    <ul class="nav navbar-right panel_toolbox"
                        style="padding-left: 20px;">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th><s:message code="listadmin.count" /></th>
                                <th><s:message code="listadmin.username" /></th>
                                <th><s:message code="listadmin.email" /></th>
                                <th><s:message code="listadmin.fullname" /></th>
                                <th><s:message code="listadmin.dayjoined" /></th>
                                <th><s:message code="setadmin.customize" /></th>
                            </tr>
                        </thead>
                        <tbody>
                            <c:forEach var="user" items="${listUserFromGroupAdmin}">
                                <tr>
                                    <th scope="row"></th>
                                    <td>
                                        <img src="${user.avatar }" width="15" height="15"
                                             class="imgmedal" />${user.userName}
                                    </td>
                                    <td>${user.fullName}</td>
                                    <td>${user.email}</td>
                                    <td>
                                        <c:set var="dateJoin" value="${user.getDateRegister()}" />
                                        <fmt:formatDate type="both" dateStyle="medium"
                                                        timeStyle="medium" value="${dateJoin}" />
                                    </td>
                                    <td align="center">
                                        <button type="button"
                                                class="btn btn-success" data-toggle="tooltip"
                                                data-placement="top"
                                                title="Edit Admin">
                                        <i class="fa fa-user-times"></i>
                                        </button>
                                    </td>
                                </tr>
                            </c:forEach>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
    <script src="resources/js/progressbar/bootstrap-progressbar.min.js" ></script>

    <!-- icheck -->
    <script src="resources/js/icheck/icheck.min.js" ></script>

    <script src="resources/js/custom.js" ></script>
    <!-- dropzone -->
    <script src="resources/js/dropzone/dropzone.js" ></script>
    <!-- pace -->
    <script src="resources/js/pace/pace.min.js" ></script>

