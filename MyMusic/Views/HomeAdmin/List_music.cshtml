
@{
    ViewBag.Title = "List_music";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="right_col" role="main">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        List Music
                    </h2>
                    <ul class="nav navbar-right panel_toolbox"
                        style="padding-left: 20px;">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                        List Video
                    </p>
                    <!--<table id="example" class="display" width="100%">
                            </table> -->
                    <table id="datatable"
                           class="table table-striped table-bordered responsive-utilities jambo_table">
                        <thead>
                            <tr class="headings">
                                <th class="column-title">#</th>
                                
                                <th class="column-title">Content</th>
                                <th class="column-title">
                                    Name Song
                                </th>
                                <th class="column-title">Singer </th>
                                <th class="column-title">Genre</th>
                                <th class="column-title">Edit</th>
                                <th class="column-title">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var video in ViewData["Video"] as List<MyMusic.Models.Post>) { 
                                <tr class=string>
                                    <td></td>
                                    
                                            <td align="center">
                                                <video width="160" height="120" controls>
                                                    <source src="@video.contentPost" type="video/mp4">
                                                </video>
                                            </td>
                                        
                                    <td>@video.nameSong</td>
                                    <td>@video.singer.nameSinger</td>
                                    <td>@video.genre.nameGenre</td>
                                    <td align="center">
                                        <a href="@Url.Action("EditPost","HomeAdmin",new { id=@video.Id})"
                                           class="btn btn-success">Edit</a>
                                    </td>
                                    <td align="center">
                                        <a href="#"
                                           class="btn btn-danger"
                                           onclick="return confirm('Are you sure you want to delete?')">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        List Music
                    </h2>
                    <ul class="nav navbar-right panel_toolbox"
                        style="padding-left: 20px;">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                        List Audio
                    </p>
                    <!--<table id="example" class="display" width="100%">
                            </table> -->
                    <table id="datatable"
                           class="table table-striped table-bordered responsive-utilities jambo_table">
                        <thead>
                            <tr class="headings">
                                <th class="column-title">#</th>

                                <th class="column-title">Content</th>
                                <th class="column-title">
                                    Name Song
                                </th>
                                <th class="column-title">Singer </th>
                                <th class="column-title">Genre</th>
                                <th class="column-title">Edit</th>
                                <th class="column-title">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var audio in ViewData["Audio"] as List<MyMusic.Models.Post>)
                            {
                                <tr class=string>
                                    <td></td>

                                    <td align="center">
                                        <video width="160" height="35" controls>
                                            <source src="@audio.contentPost" type="video/mp4">
                                        </video>
                                    </td>

                                    <td>@audio.nameSong</td>
                                    <td>@audio.singer.nameSinger</td>
                                    <td>@audio.genre.nameGenre</td>
                                    <td align="center">
                                        <a href="@Url.Action("EditPost","HomeAdmin",new { id=@audio.Id})"
                                           class="btn btn-success">Edit</a>
                                    </td>
                                    <td align="center">
                                        <a href="#"
                                           class="btn btn-danger"
                                           onclick="return confirm('Are you sure you want to delete?')">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</div>
