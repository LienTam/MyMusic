@model MyMusic.Models.User

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutRegister.cshtml";
}



@using (Html.BeginForm("Register", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <section id="content" class="m-t-lg wrapper-md animated fadeInDown">
        <div class="container aside-xl">
            <a class="navbar-brand block" href="index.html"><span class="h1 font-bold">My Music</span></a>
            <section class="m-b-lg">
                <header class="wrapper text-center">
                    <strong>Sign up to find interesting thing</strong>
                </header>
                <div class="form-horizontal" style="text-align: center">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "color:#FFFFFF" })

                    <div class="form-group">

                        <div class="col-md-12">
                            @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger", style = "color:#FFFFFF", })
                            @Html.TextBoxFor(model => model.userName, new { @class = "form-control rounded input-lg text-center no-border", @placeholder = "UserName" })

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger", style = "color:#FFFFFF" })
                            @Html.TextBoxFor(model => model.email, new { @class = "form-control rounded input-lg text-center no-border", @placeholder = "Email" })

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger", style = "color:#FFFFFF" })
                            @Html.PasswordFor(model => model.password, new { @class = "form-control rounded input-lg text-center no-border", @placeholder = "Password" })
                        </div>
                    </div>


                    <button type="submit" class="btn btn-lg btn-warning lt b-white b-2x btn-block btn-
rounded">
                        <i class="icon-arrow-right pull-right"></i><span class="m-r-n-lg">Sign up</span>
                    </button>
                    <div class="line line-dashed"></div>
                    <p class="text-muted text-center"><small>Already have an account?</small></p>
                    <a href="signin.html" class="btn btn-lg btn-info btn-block btn-rounded">Sign in</a>
                </div>

            </section>
        </div>
    </section>
}


